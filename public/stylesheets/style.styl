/* INPUT CONTAINER */

#inputContainer {
	position: fixed;
	width:100%;
	top: -40px;
	z-index: 1000;
	background-color: #19212C;
}

#inputContainer.loaded {
	top: 0px !important;
	transition: all 0.5s;
}

#homeIcon {
	font-size: 24px;
	padding: 0 10px;
	color: #FFF;
}

#homeIcon .fa-angle-right {
	padding-left: 10px;
}

#inputContainer input[type=text] {
	font-size: 16px;
	padding: 10px;
	width: 50%;
	background-color: transparent;
	border: none;
	cursor: pointer;
	color: #FFF;
}

::-webkit-input-placeholder {
	color: #FFF;
}

#submit {
	position: absolute;
	right: 10px;
	top: 14px;
	font-size: 10px;
	text-transform: uppercase;
	color: #FFF;
	background-color: transparent;
	border: none;
	cursor: pointer;
	opacity: 0;
	transition: all 0.5s;
}

#submit.loaded {
	opacity: 1;
	transition: all 0.5s;
}

/* OUTPUT CONTAINER */

#outputContainer {
	padding-top: 50px;
	line-height: 22px;
	opacity: 0;
}

#outputContainer.loaded {
	opacity: 1;
	transition: all 0.5s;
}

.fqResult {
	width: 300px;
	height: 130px;
	margin: 5px;
	float: left;
	padding: 10px;
	position: relative;
	background: #FFF;
}

.fqResult h2 {
	font-weight: 600;
	border-bottom: 1px dotted #CCC;
	padding-bottom: 5px;
	margin-bottom: 5px;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.fqResult h2 .fa {
	color: #0072B1;
}

.fqResult .tierrating {
	position: absolute;
	top: -4px;
	right:0;
	font-size: 10px;
}

.tier, .rating {
	padding: 0 5px;
	background: #EFEFEF;
}

.fa-star {
	color: #A8CB17;
}

