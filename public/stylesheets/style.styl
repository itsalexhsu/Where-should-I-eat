body {
	font-family: 'Open Sans',Arial;
	font-weight: 300;
	background-color: #999;
}

body.loaded {
	background-color: #CCC;
	transition: all 0.5s;
}

a {
	text-decoration: none;
	color: #09C;
}

#ajaxNotification {
	background-color: red;
	color: white;
	padding: 10px;
	position: fixed;
	top: 10px;
	right: -10px;
	opacity: 0;
	z-index: 2000;
	border-radius: 5px;
	transition: all 0.5s;
	cursor: default;
}

#ajaxNotification.loaded {
	right: 10px;
	opacity: 1;
	transition: all 0.5s;
}

#ajaxLoader {
	position: absolute;
	right: 150px;
	top: 17px;
	font-size: 10px;
	text-transform: uppercase;
	color: #FFF;
	background-color: transparent;
	border: none;
	cursor: pointer;
	opacity: 0;
	transition: all 0.5s;
}

#ajaxLoader.loaded {
	opacity: 1;
	transition: all 0.5s;
}

